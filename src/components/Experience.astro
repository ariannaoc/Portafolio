---
import Carousel from "../components/Carousel";
import Label from "./Label.astro";

const servicom = [
  "/servicom/login.png",
  "/servicom/inicio.png",
  "/servicom/menu.png",
  "/servicom/estudiantes.png",
  "/servicom/proyectos.png",
  "/servicom/formP.png",
  "/servicom/periodo.png",
  "/servicom/tutores.png",
];
const carnet = [
  "/carnet/login.png",
  "/carnet/principal.png",
  "/carnet/data.png",
  "/carnet/ajustes.png",
  "/carnet/emitidos.png",
];
---
<section id="Experience" class=" mx-5 lg:mx-20">


<h2
class="text-4xl text-center font-bold mb-12 text-jade-950 dark:text-jade-50 drop-shadow-md"
>
Experiencia Profesional
</h2>

<div class="xl:flex gap-10 my-2">
  <div class="xl:ml-10 w-fit mx- sm:mx-0">
    <Carousel client:load images={servicom} />
  </div>

  <div>
    <h3 class="py-4 font-bold sm:text-xl text-base text-jade-950 dark:text-bunker-100">
      Instituto Universitario de Tecnología Dr. Cristóbal Mendoza 
    </h3>
    <p class="font-semibold text-jade-950 dark:text-bunker-100 sm:text-base text-xs">
      Desarrollo de Sistema Automatizado para la gestión de información del Servicio Comunitario.
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      <Label title="React" color="bg-blue-100/20 border border-blue text-blue-100"/>
      <Label title="JavaScript" color="dark:bg-yellow-200/20 border dark:border-yellow-200 dark:text-yellow-200 bg-yellow-200/50 text-orange/70 border-yellow-200"/>
      <Label title="HTML" color="bg-orange/20 border border-orange text-orange"/>
      <Label title="Vite" color="bg-purple/20 border border-purple text-purple"/>
      <Label title="Electron" color="bg-blue-100/20 border border-blue-100 text-blue-100"/>
      <Label title="Node" color="bg-green/20 border border-green text-green"/>
      <Label title="Boostrap" color="bg-violet/20 border border-violet text-violet"/>
    </div>
  </div>
</div>

<br>
<br>


<div class="xl:flex gap-10 my-2">
  <div class="xl:ml-10 w-fit mx- sm:mx-0">
    <Carousel client:load images={carnet} />
  </div>

  <div>
    <h3 class="py-4 font-bold sm:text-xl text-base text-jade-950 dark:text-bunker-100">
      Universidad de Los Andes
    </h3>
    <p class="font-semibold text-jade-950 dark:text-bunker-100 sm:text-base text-xs">
      Desarrollo de Sistema de Carnetización Institucional para estudiantes y personal.
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      <Label title="React" color="bg-blue-100/20 border border-blue text-blue-100"/>
      <Label title="JavaScript" color="dark:bg-yellow-200/20 border dark:border-yellow-200 dark:text-yellow-200 bg-yellow-200/50 text-orange/70 border-yellow-200"/>
      <Label title="HTML" color="bg-orange/20 border border-orange text-orange"/>
      <Label title="Node" color="bg-green/20 border border-green text-green"/>
      <Label title="Python" color="dark:bg-yellow-100/20 border dark:border-yellow-100 dark:text-yellow-100 bg-yellow-100/50 text-orange/70 border-orange/70"/>
      <Label title="Tailwind" color="bg-teal/20 border border-teal text-teal"/>
      <Label title="CSS" color="bg-blue-200/20 border border-blue-200 text-blue-200"/>
    </div>
  </div>
</div>

</section>